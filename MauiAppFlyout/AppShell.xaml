<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppFlyout.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppFlyout"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiAppFlyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Add"
        ContentTemplate="{DataTemplate local:Add}"
        Route="Add" />

    <ShellContent
        Title="Edit"
        ContentTemplate="{DataTemplate local:Edit}"
        Route="Edit" />

</Shell>
